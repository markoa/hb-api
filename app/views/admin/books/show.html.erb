<div class="page-header">
  <h1>
    Book <%= @book.id %>
  </h1>
</div>

<table class="table table-bordered">
  <tr>
    <td>Id:</td>
    <td><%= @book.id %></td>
  </tr>
  <tr>
    <td>Title:</td>
    <td><%= @book.title %></td>
  </tr>
  <tr>
    <td>Url:</td>
    <td><%= @book.url %></td>
  </tr>
  <tr>
    <td>Cover url:</td>
    <td><%= @book.cover_url %></td>
  </tr>
  <tr>
    <td>Description:</td>
    <td><%= @book.description %></td>
  </tr>
  <tr>
    <td>Publisher:</td>
    <td><%= @book.publisher %></td>
  </tr>
  <tr>
    <td>Created at:</td>
    <td><%= @book.created_at %></td>
  </tr>
  <tr>
    <td>Updated at:</td>
    <td><%= @book.updated_at %></td>
  </tr>

  <tr>
    <td>Actions</td>
    <td>
      <%= link_to "Edit", edit_admin_book_path(@book), :class => "btn btn-default" %>
      <%= link_to("Delete", admin_book_path(@book), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => "btn btn-danger") %>
    </td>
  </tr>
</table>
